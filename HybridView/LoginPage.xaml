<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HybridView.LoginPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" Margin="20">
            <Entry x:Name="usernameEntry" Placeholder="username" Keyboard="Text"/>
            <Entry x:Name="passwordEntry" IsPassword="true" Placeholder="Password" Keyboard="Text"/>
            <Button x:Name="btnLogin" Text="Login" BackgroundColor="#77d065" TextColor="#FFFFFF" Clicked="doLogin"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>