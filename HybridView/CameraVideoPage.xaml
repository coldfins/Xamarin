<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HybridView.CameraVideoPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to Camera Video page" />

            <Button Clicked="TakePicture" Text="Take Picture" />
            <Button Clicked="TakeVideo" Text="Take Video" />
            <Button Clicked="SelectPicture" Text="Select Image from Picture Library" />
            <Button Clicked="SelectVideo" Text="Select Video from Picture Library " />
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>